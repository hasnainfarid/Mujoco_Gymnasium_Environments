<mujoco model="bipedal_robot">
    <!-- Bipedal rescue robot with enhanced carrying capabilities -->
    <body name="torso" pos="0 0 1.2">
        <joint name="root_x" type="slide" axis="1 0 0" limited="false"/>
        <joint name="root_y" type="slide" axis="0 1 0" limited="false"/>
        <joint name="root_z" type="slide" axis="0 0 1" limited="false"/>
        <joint name="root_rx" type="hinge" axis="1 0 0" limited="false"/>
        <joint name="root_ry" type="hinge" axis="0 1 0" limited="false"/>
        <joint name="root_rz" type="hinge" axis="0 0 1" limited="false"/>
        
        <!-- Main torso -->
        <geom name="torso_geom" type="box" size="0.15 0.25 0.35" rgba="0.2 0.3 0.8 1"/>
        <site name="torso_site" pos="0 0 0" size="0.05"/>
        
        <!-- Head with sensors -->
        <body name="head" pos="0 0 0.4">
            <joint name="neck_pitch" type="hinge" axis="0 1 0" range="-45 45"/>
            <joint name="neck_yaw" type="hinge" axis="0 0 1" range="-90 90"/>
            <geom name="head_geom" type="sphere" size="0.12" rgba="0.8 0.8 0.8 1"/>
            <site name="vision_sensor" pos="0.1 0 0" size="0.02" rgba="0 1 0 1"/>
            <camera name="head_camera" pos="0.15 0 0" quat="0.707 0 0.707 0" fovy="60"/>
        </body>
        
        <!-- Right arm with gripper -->
        <body name="right_arm_upper" pos="0.25 0 0.2">
            <joint name="right_shoulder_pitch" type="hinge" axis="0 1 0" range="-90 180"/>
            <joint name="right_shoulder_roll" type="hinge" axis="1 0 0" range="-90 90"/>
            <geom name="right_arm_upper_geom" type="capsule" fromto="0 0 0 0.3 0 -0.2" size="0.05" rgba="0.3 0.3 0.8 1"/>
            
            <body name="right_arm_lower" pos="0.3 0 -0.2">
                <joint name="right_elbow" type="hinge" axis="0 1 0" range="0 150"/>
                <geom name="right_arm_lower_geom" type="capsule" fromto="0 0 0 0.25 0 0" size="0.04" rgba="0.3 0.3 0.8 1"/>
                
                <!-- Right gripper -->
                <body name="right_gripper" pos="0.25 0 0">
                    <joint name="right_wrist" type="hinge" axis="0 0 1" range="-90 90"/>
                    <geom name="right_gripper_base" type="box" size="0.03 0.05 0.02" rgba="0.5 0.5 0.5 1"/>
                    
                    <!-- Gripper fingers -->
                    <body name="right_finger1" pos="0.03 0.02 0">
                        <joint name="right_finger1_joint" type="hinge" axis="0 1 0" range="0 90"/>
                        <geom name="right_finger1_geom" type="box" size="0.01 0.01 0.04" rgba="0.6 0.6 0.6 1"/>
                    </body>
                    <body name="right_finger2" pos="0.03 -0.02 0">
                        <joint name="right_finger2_joint" type="hinge" axis="0 1 0" range="0 90"/>
                        <geom name="right_finger2_geom" type="box" size="0.01 0.01 0.04" rgba="0.6 0.6 0.6 1"/>
                    </body>
                    <site name="right_gripper_site" pos="0.05 0 0" size="0.02"/>
                </body>
            </body>
        </body>
        
        <!-- Left arm with gripper -->
        <body name="left_arm_upper" pos="-0.25 0 0.2">
            <joint name="left_shoulder_pitch" type="hinge" axis="0 1 0" range="-90 180"/>
            <joint name="left_shoulder_roll" type="hinge" axis="1 0 0" range="-90 90"/>
            <geom name="left_arm_upper_geom" type="capsule" fromto="0 0 0 -0.3 0 -0.2" size="0.05" rgba="0.3 0.3 0.8 1"/>
            
            <body name="left_arm_lower" pos="-0.3 0 -0.2">
                <joint name="left_elbow" type="hinge" axis="0 1 0" range="0 150"/>
                <geom name="left_arm_lower_geom" type="capsule" fromto="0 0 0 -0.25 0 0" size="0.04" rgba="0.3 0.3 0.8 1"/>
                
                <!-- Left gripper -->
                <body name="left_gripper" pos="-0.25 0 0">
                    <joint name="left_wrist" type="hinge" axis="0 0 1" range="-90 90"/>
                    <geom name="left_gripper_base" type="box" size="0.03 0.05 0.02" rgba="0.5 0.5 0.5 1"/>
                    
                    <!-- Gripper fingers -->
                    <body name="left_finger1" pos="-0.03 0.02 0">
                        <joint name="left_finger1_joint" type="hinge" axis="0 1 0" range="0 90"/>
                        <geom name="left_finger1_geom" type="box" size="0.01 0.01 0.04" rgba="0.6 0.6 0.6 1"/>
                    </body>
                    <body name="left_finger2" pos="-0.03 -0.02 0">
                        <joint name="left_finger2_joint" type="hinge" axis="0 1 0" range="0 90"/>
                        <geom name="left_finger2_geom" type="box" size="0.01 0.01 0.04" rgba="0.6 0.6 0.6 1"/>
                    </body>
                    <site name="left_gripper_site" pos="-0.05 0 0" size="0.02"/>
                </body>
            </body>
        </body>
        
        <!-- Right leg -->
        <body name="right_hip" pos="0.1 0 -0.35">
            <joint name="right_hip_roll" type="hinge" axis="1 0 0" range="-45 45"/>
            <joint name="right_hip_pitch" type="hinge" axis="0 1 0" range="-120 45"/>
            <joint name="right_hip_yaw" type="hinge" axis="0 0 1" range="-45 45"/>
            <geom name="right_thigh_geom" type="capsule" fromto="0 0 0 0 0 -0.4" size="0.08" rgba="0.4 0.4 0.7 1"/>
            
            <body name="right_knee" pos="0 0 -0.4">
                <joint name="right_knee_joint" type="hinge" axis="0 1 0" range="-5 150"/>
                <geom name="right_shin_geom" type="capsule" fromto="0 0 0 0 0 -0.4" size="0.06" rgba="0.4 0.4 0.7 1"/>
                
                <body name="right_foot" pos="0 0 -0.4">
                    <joint name="right_ankle_pitch" type="hinge" axis="0 1 0" range="-45 45"/>
                    <joint name="right_ankle_roll" type="hinge" axis="1 0 0" range="-30 30"/>
                    <geom name="right_foot_geom" type="box" size="0.08 0.15 0.03" pos="0 0.05 -0.03" rgba="0.1 0.1 0.1 1"/>
                    <site name="right_foot_contact" pos="0 0 -0.06" size="0.05"/>
                </body>
            </body>
        </body>
        
        <!-- Left leg -->
        <body name="left_hip" pos="-0.1 0 -0.35">
            <joint name="left_hip_roll" type="hinge" axis="1 0 0" range="-45 45"/>
            <joint name="left_hip_pitch" type="hinge" axis="0 1 0" range="-120 45"/>
            <joint name="left_hip_yaw" type="hinge" axis="0 0 1" range="-45 45"/>
            <geom name="left_thigh_geom" type="capsule" fromto="0 0 0 0 0 -0.4" size="0.08" rgba="0.4 0.4 0.7 1"/>
            
            <body name="left_knee" pos="0 0 -0.4">
                <joint name="left_knee_joint" type="hinge" axis="0 1 0" range="-5 150"/>
                <geom name="left_shin_geom" type="capsule" fromto="0 0 0 0 0 -0.4" size="0.06" rgba="0.4 0.4 0.7 1"/>
                
                <body name="left_foot" pos="0 0 -0.4">
                    <joint name="left_ankle_pitch" type="hinge" axis="0 1 0" range="-45 45"/>
                    <joint name="left_ankle_roll" type="hinge" axis="1 0 0" range="-30 30"/>
                    <geom name="left_foot_geom" type="box" size="0.08 0.15 0.03" pos="0 0.05 -0.03" rgba="0.1 0.1 0.1 1"/>
                    <site name="left_foot_contact" pos="0 0 -0.06" size="0.05"/>
                </body>
            </body>
        </body>
        
        <!-- Back carrying platform -->
        <body name="carrying_platform" pos="-0.2 0 0">
            <geom name="platform_geom" type="box" size="0.05 0.2 0.25" rgba="0.8 0.5 0.2 0.5"/>
            <site name="carrying_site" pos="0 0 0" size="0.1"/>
        </body>
    </body>
</mujoco>
