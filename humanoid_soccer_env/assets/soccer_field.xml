<mujoco model="soccer_field">
  <compiler angle="radian" coordinate="local" inertiafromgeom="true"/>
  
  <default>
    <geom conaffinity="1" condim="3" density="1000" friction="1.2 0.6 0.6" margin="0.01"/>
  </default>

  <asset>
    <texture builtin="gradient" height="100" rgb1="0.4 0.6 1.0" rgb2="0.8 0.9 1.0" type="skybox" width="100"/>
    <texture builtin="checker" height="512" name="grass_texture" rgb1="0.2 0.6 0.2" rgb2="0.3 0.7 0.3" type="2d" width="512"/>
    <texture builtin="flat" height="32" name="goal_texture" rgb1="1 1 1" rgb2="1 1 1" type="2d" width="32"/>
    <texture builtin="flat" height="32" name="line_texture" rgb1="1 1 1" rgb2="1 1 1" type="2d" width="32"/>
    
    <material name="grass" reflectance="0.3" shininess="0.1" specular="0.1" texrepeat="50 30" texture="grass_texture"/>
    <material name="goal_material" reflectance="0.1" shininess="0.1" specular="0.1" texture="goal_texture"/>
    <material name="line_material" reflectance="0.1" shininess="0.1" specular="0.1" texture="line_texture"/>
  </asset>

  <worldbody>
    <!-- Ground plane (soccer field) -->
    <geom name="field" pos="0 0 0" size="25 15 0.1" type="box" material="grass"/>
    
    <!-- Simple field boundaries - just lines on the ground -->
    <geom name="boundary_north" pos="0 15 0.01" size="25 0.05 0.01" type="box" material="line_material" contype="0" conaffinity="0"/>
    <geom name="boundary_south" pos="0 -15 0.01" size="25 0.05 0.01" type="box" material="line_material" contype="0" conaffinity="0"/>
    <geom name="boundary_east" pos="25 0 0.01" size="0.05 15 0.01" type="box" material="line_material" contype="0" conaffinity="0"/>
    <geom name="boundary_west" pos="-25 0 0.01" size="0.05 15 0.01" type="box" material="line_material" contype="0" conaffinity="0"/>
    
    <!-- Goal posts - East goal (target for robot) -->
    <body name="east_goal" pos="24.5 0 0">
      <geom name="east_goal_left_post" pos="0 -3.66 1.22" size="0.06 0.06 1.22" type="box" material="goal_material"/>
      <geom name="east_goal_right_post" pos="0 3.66 1.22" size="0.06 0.06 1.22" type="box" material="goal_material"/>
      <geom name="east_goal_crossbar" pos="0 0 2.44" size="0.06 3.66 0.06" type="box" material="goal_material"/>
      <geom name="east_goal_net_back" pos="-0.5 0 1.22" size="0.02 3.66 1.22" type="box" rgba="1 1 1 0.3"/>
      
      <!-- Goal detection zone -->
      <geom name="east_goal_zone" pos="-0.25 0 0.61" size="0.25 3.66 0.61" type="box" rgba="0 1 0 0.1" contype="0" conaffinity="0"/>
    </body>
    
    <!-- Goal posts - West goal (opponent goal) -->
    <body name="west_goal" pos="-24.5 0 0">
      <geom name="west_goal_left_post" pos="0 -3.66 1.22" size="0.06 0.06 1.22" type="box" material="goal_material"/>
      <geom name="west_goal_right_post" pos="0 3.66 1.22" size="0.06 0.06 1.22" type="box" material="goal_material"/>
      <geom name="west_goal_crossbar" pos="0 0 2.44" size="0.06 3.66 0.06" type="box" material="goal_material"/>
      <geom name="west_goal_net_back" pos="0.5 0 1.22" size="0.02 3.66 1.22" type="box" rgba="1 1 1 0.3"/>
    </body>
    
    <!-- Center circle - just a thin line on the ground -->
    <geom name="center_circle" pos="0 0 0.01" size="4.57 0.05 0.01" type="box" material="line_material" contype="0" conaffinity="0"/>
    
    <!-- Penalty areas -->
    <!-- East penalty area -->
    <geom name="east_penalty_line_1" pos="18.32 -8.16 0.01" size="0.05 8.16 0.01" type="box" material="line_material" contype="0" conaffinity="0"/>
    <geom name="east_penalty_line_2" pos="18.32 8.16 0.01" size="0.05 8.16 0.01" type="box" material="line_material" contype="0" conaffinity="0"/>
    <geom name="east_penalty_line_3" pos="12.84 0 0.01" size="5.48 0.05 0.01" type="box" material="line_material" contype="0" conaffinity="0"/>
    
    <!-- West penalty area -->
    <geom name="west_penalty_line_1" pos="-18.32 -8.16 0.01" size="0.05 8.16 0.01" type="box" material="line_material" contype="0" conaffinity="0"/>
    <geom name="west_penalty_line_2" pos="-18.32 8.16 0.01" size="0.05 8.16 0.01" type="box" material="line_material" contype="0" conaffinity="0"/>
    <geom name="west_penalty_line_3" pos="-12.84 0 0.01" size="5.48 0.05 0.01" type="box" material="line_material" contype="0" conaffinity="0"/>
    
    <!-- Goal areas -->
    <!-- East goal area -->
    <geom name="east_goal_area_1" pos="22.86 -2.74 0.01" size="0.05 2.74 0.01" type="box" material="line_material" contype="0" conaffinity="0"/>
    <geom name="east_goal_area_2" pos="22.86 2.74 0.01" size="0.05 2.74 0.01" type="box" material="line_material" contype="0" conaffinity="0"/>
    <geom name="east_goal_area_3" pos="21.04 0 0.01" size="1.82 0.05 0.01" type="box" material="line_material" contype="0" conaffinity="0"/>
    
    <!-- West goal area -->
    <geom name="west_goal_area_1" pos="-22.86 -2.74 0.01" size="0.05 2.74 0.01" type="box" material="line_material" contype="0" conaffinity="0"/>
    <geom name="west_goal_area_2" pos="-22.86 2.74 0.01" size="0.05 2.74 0.01" type="box" material="line_material" contype="0" conaffinity="0"/>
    <geom name="west_goal_area_3" pos="-21.04 0 0.01" size="1.82 0.05 0.01" type="box" material="line_material" contype="0" conaffinity="0"/>
    
    <!-- Center line -->
    <geom name="center_line" pos="0 0 0.01" size="0.05 15 0.01" type="box" material="line_material" contype="0" conaffinity="0"/>
    
    <!-- Corner arcs removed for cleaner field -->
    
    <!-- Opponent goalkeeper (simple moving obstacle) -->
    <body name="opponent_goalkeeper" pos="-23 0 0.9">
      <geom name="goalkeeper_body" pos="0 0 0" size="0.3 0.2 0.9" type="box" rgba="1 0.5 0 0.8"/>
      <joint name="goalkeeper_y" type="slide" axis="0 1 0" range="-3.66 3.66" damping="10"/>
    </body>
    
    <!-- Simple lighting -->
    <light cutoff="100" diffuse="1 1 1" dir="0 0 -1" directional="true" exponent="1" pos="0 0 20" specular="0.3 0.3 0.3"/>
  </worldbody>
  
  <!-- Sensors for field conditions -->
  <sensor>
    <framepos name="east_goal_sensor" objtype="geom" objname="east_goal_zone"/>
    <framepos name="opponent_pos" objtype="body" objname="opponent_goalkeeper"/>
  </sensor>
</mujoco>
